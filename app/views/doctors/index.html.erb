<h1>Doctors</h1>

<table>
  <thead>
    <th>Name</th>
    <th>Contact No</th>
    <th>Speciality</th>
    <th colspan="3">Actions</th>
  </thead>
  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.name %></td>
        <td><%= doctor.contact_no %></td>
        <td><%= doctor.speciality %></td>
        <td><%= link_to 'Show', doctor_path(doctor) %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Delete', doctor_path(doctor), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Doctor', new_doctor_path %>