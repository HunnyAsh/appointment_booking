<%= form_for patient, url: patient_path(patient) do |f| %>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>
  <br><br>

  <%= f.label :contact_no, "Contact No" %>
  <%= f.number_field :contact_no %>
  <br><br>

  <%= f.label :address, "Address" %>
  <%= f.text_area :address %>
  <br><br>

  <%= f.fields_for :profile, patient.profile do |profile_fields| %>
    <%= profile_fields.label :dob, 'DOB' %>
    <%= profile_fields.date_field :dob %>
  <% end %>

  <%= f.submit %>
<% end %>